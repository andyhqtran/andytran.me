{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["SITE_URL", "HYGRAPH_CONTENT_API"],
      "outputs": [".next/**", "!.next/cache/**", "storybook-static/**", "dist/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {},
    "lint:fix": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [".env"]
}
